<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="50sp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="5sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/ic_close_black"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:padding="5sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="Done"
            android:textAllCaps="true"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Distance Calculation Units"
                android:padding="5sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:weightSum="2"
    android:layout_marginStart="20sp"
    android:layout_marginEnd="20sp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:text="Meter"
        android:id="@+id/meter"
        android:layout_weight="1"
        android:padding="5sp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Kilo Meter"
        android:id="@+id/kmeter"
        android:layout_weight="1"
        android:padding="5sp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="10sp"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:text="Avoid Types"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:padding="5sp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:weightSum="2"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="TOLLS"
                        android:id="@+id/toll"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="HIGHWAYS"
                        android:id="@+id/highway"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:weightSum="2"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="FERRIES"
                        android:id="@+id/ferries"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="INDOOR"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:id="@+id/indoor"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="10sp"
                    android:background="@color/colorPrimary"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:text="Transit Types"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5sp"
        android:textSize="15sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:weightSum="2"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="Walking"
            android:layout_weight="1"
            android:padding="5sp"
            android:id="@+id/bus"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="bicycling"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:padding="5sp"
            android:textSize="15sp"
            android:id="@+id/bycycle"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:weightSum="2"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="driving"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:padding="5sp"
            android:id="@+id/drivering"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="Train"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:padding="5sp"
            android:id="@+id/train"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>